
# === Build Stage ===
FROM maven:3.9.4-eclipse-temurin-21 AS build
WORKDIR /workspace

# Copy only what is needed first to leverage Docker layer caching for Maven dependencies
COPY pom.xml .
COPY mvnw .
COPY .mvn .mvn
RUN --mount=type=cache,target=/root/.m2 mvn -B -e -T 1C dependency:go-offline

# Copy source and build the application
COPY src ./src
RUN --mount=type=cache,target=/root/.m2 mvn -B -T 1C clean package -DskipTests

# === Runtime Stage ===
# Use a lightweight JRE matching the build JDK (OpenJDK 17 runtime)
FROM eclipse-temurin:21-jre-jammy
WORKDIR /app

# Copy the built artifact (matches any jar produced)
COPY --from=build /workspace/target/*.jar app.jar

# Expose port used by the app
EXPOSE 8080

# Healthcheck (optional, adjust URL/port as appropriate for your app)
HEALTHCHECK --interval=30s --timeout=5s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8080/ || exit 1
ENTRYPOINT ["java", "-Djava.net.preferIPv4Stack=true", "-jar", "/app/app.jar"]
